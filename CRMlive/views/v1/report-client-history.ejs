<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://unpkg.com/@coreui/coreui@2.1.16/dist/css/coreui.min.css' />
    <link rel="stylesheet" href="https://unpkg.com/@coreui/icons@1.0.0/css/all.min.css">
  </head>

<body class="app sidebar-show aside-menu-show">

  <header class="app-header navbar">
    <% include partials/header %>
  </header>

  <div class="app-body">

    <div class="sidebar">
      <% include partials/sidebar %>
    </div>

    <main class="main mt-2 mx-3">
      <form id="formActivityReport" name="formActivityReport" method="post" action="/result-client-history-report">
      <div class="card w-auto">
        <h3 class="card-header">Client History Report</h3>
        <div class="card-body">

  <!-- Select Agent from Prepopulated list of options -->
            <div class="form-row">
              <div class="form-group col-12">
                  <label for="agentSelect">Client</label>
                    <select class="form-control" name="clientSelect" id="clientSelect" onChange="changeAgent(this.value);" required>
                      <%
                          var list = '<option value="" disabled selected>Select</option>';
                          for (i = 0; i < clientList.length; i++) {
                            list += '<option>' + clientList[i].clientName + '</option>';
                          }
                      %>
                        <%- list %>
                    </select>
              </div>
            </div>



  <!-- Select Date Range for Data -->
        <div class="form-row">
          <div class="form-group col-6">
            <label for="inputDateStart">Date Start</label>
            <input type="date" class="form-control" id="dateStartInput" name="dateStartInput" required>
          </div>
          <div class="form-group col-6">
            <label for="inputDateEnd">Date End</label>
            <input type="date" class="form-control" id="dateEndInput" name="dateEndInput" required>
          </div>
        </div>

<!-- Submit Button to execute -->
        <div class="form-row">
          <div class="form-group col">
            <input class="btn btn-primary" type="submit" value="Submit">
            </form>
          </div>
        </div>

      </div>
    </div>

    </main>

    <aside class="aside-menu-hidden">
      <!-- Aside menu content here -->
    </aside>

  </div>
  <footer class="app-footer">
    <% include partials/footer %>
  </footer>
</body>
</html>
