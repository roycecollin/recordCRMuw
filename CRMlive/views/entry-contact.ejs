<!doctype html>
<html lang="en">
 <head>
 <!-- Required meta tags -->
 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1">

 <!-- CoreUI CSS -->
 <link rel="stylesheet" href="https://unpkg.com/@coreui/coreui@3.0.0-rc.0/dist/css/coreui.min.css" crossorigin="anonymous">
 <link rel="stylesheet" href="https://unpkg.com/@coreui/icons@1.0.0/css/all.min.css">

 <title>CRM - Contact Entry</title>
 </head>
 <body class="c-app">

   <div class="c-sidebar c-sidebar-light c-sidebar-fixed c-sidebar-lg-show" id="sidebar">
     <% include partials/sidebar %>
   </div>

  <div class="c-wrapper">
    <header class="c-header c-header-dark bg-primary c-header-fixed">
      <!-- Header content here -->
      <% include partials/header %>
    </header>
    <div class="c-body">
        <!-- Main content here -->
      <main class="c-main">
        <main class="main mt-0 mx-3">
          <h2>Contact Entry Form</h2>
          <hr>
          <form id="formAddContact" name="addContact" method="post" action="/addContact">

          <!-- Contact-Client Association-->
            <div class="form-row">
              <div class="form-group col-12 col-md-auto">
                <label for="clientID">Client</label>
                  <select class="form-control" name="clientID" required>
                  <%
                      var sortedClients = clientList.sort(function(a,b){
                          if (a.clientName > b.clientName) { return 1;}
                          if (a.clientName < b.clientName) {return -1;}
                          return 0;
                      });
                      var list = '<option value="" disabled selected>Select</option>';
                      for (i = 0; i < sortedClients.length; i++) {
                        list += '<option>' + sortedClients[i].clientName + '</option>';
                      }
                  %>
                    <%- list %>
                  </select>
              </div>
            </div>

          <!-- Contact Name-->
              <label for="contactName">Contact Name</label>
              <div class="form-row">
                <div class="form-group col-12 col-md-auto">
                  <input type="text" class="form-control" id="contactFirstName" name="contactFirstName" placeholder="First Name" required>
                </div>
                <div class="form-group col-12 col-md-auto">
                  <input type="text" class="form-control" id="contactLastName" name="contactLastName" placeholder="Last Name">
                </div>
              </div>

          <!-- Contact Position-->
            <label for="contactPosition">Position</label>
              <div class="form-row">
          			<div class="form-group col-12 col-md-auto">
          			  <input type="text" class="form-control" id="contactPosition" name="contactPosition" placeholder="Position" required>
          			</div>
          	</div>

           <!-- Contact Numbers-->
            <label for="contactPhone">Contact Numbers</label>
              <div class="form-row">
          			<div class="form-group col-12 col-md-auto">
          			  <input type="text" class="form-control" id="contactPhone" name="contactPhone" placeholder="Phone Number">
          			</div>
          			<div class="form-group col-12 col-md-auto">
          			  <input type="text" class="form-control" id="contactMobile" name="contactMobile" placeholder="Mobile Number">
          			</div>
          	</div>

          <!-- Contact Email Address-->
            <label for="inputAddress">Email Address</label>
              <div class="form-row">
          			<div class="form-group col-12 col-md-auto">
          			  <input type="email" class="form-control" id="contactEmail" name="contactEmail" placeholder="user@email.com">
          			</div>
          	</div>

          <!-- Contact Notes-->

            <label for="contactNotes">Notes</label>
              <div class="form-row">
          		<div class="form-group col-12 col-md-4">
          			<textarea class="form-control" name="contactNotes" rows="3" placeholder="Remarks"></textarea>
          		</div>
          	</div>
            <div class="row">
              <div class="col-12 col-md-auto">
                <input class="btn-block btn-primary btn-lg" type="submit" value="Submit">
              </div>
            </div>

          </form>

        </main>
      </main>
    </div>
    <footer class="c-footer">
      <!-- Footer content here -->
      <% include partials/footer %>
    </footer>
  </div>

  <!-- Optional JavaScript -->
 <!-- Popper.js first, then CoreUI JS -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/umd/popper.min.js" integrity="sha384-L2pyEeut/H3mtgCBaUNw7KWzp5n9&#43;4pDQiExs933/5QfaTh8YStYFFkOzSoXjlTb" crossorigin="anonymous"></script>
 <script src="https://unpkg.com/@coreui/coreui@3.0.0-rc.0/dist/js/coreui.min.js"></script>
 </body>
</html>
