<!Doctype html>
<html lang="en">
 <head>
 <!-- Required meta tags -->
 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1">

 <!-- CoreUI CSS -->
 <link rel="stylesheet" href="https://unpkg.com/@coreui/coreui@3.0.0-rc.0/dist/css/coreui.min.css" crossorigin="anonymous">
 <link rel="stylesheet" href="https://unpkg.com/@coreui/icons@1.0.0/css/all.min.css">

 <title>RECORD</title>
</head>
<body class="c-app">
	<div class="c-wrapper container">
		<header class="c-header c-header-dark bg-primary c-header-fixed">
			<!-- Header content here -->
		</header>
		<div class="c-body">
			<main class="c-main">

					<div class="container" style="max-width:500px">
						<img src="/images/recordpurple.svg" class="img-fluid" alt="Responsive image">
					</div>

			    <!-- LOGIN FORM -->
			    <form action="/login" method="post">
						<div class="form-row justify-content-md-center px-5">
			        <div class="form-group col-12 col-md-3">
			            <label>Username</label>
			            <input type="text" class="form-control" name="username">
			        </div>
						</div>
						<div class="form-row justify-content-md-center px-5">
			        <div class="form-group col-12 col-md-3">
			            <label>Password</label>
			            <input type="password" class="form-control" name="password">
			        </div>
						</div>
						<br>
						<div class="form-row justify-content-center px-5">
	            <div class="form-group col-12 col-md-3">
			        	<button type="submit" class="btn-block btn-primary btn-lg">Login</button>
							</div>
						</div>
			    </form>

			</main>
			</div>
		</div>
		<!-- Popper.js first, then CoreUI JS -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/umd/popper.min.js" integrity="sha384-L2pyEeut/H3mtgCBaUNw7KWzp5n9&#43;4pDQiExs933/5QfaTh8YStYFFkOzSoXjlTb" crossorigin="anonymous"></script>
		<script src="https://unpkg.com/@coreui/coreui@3.0.0-rc.0/dist/js/coreui.min.js"></script>

</body>
</html>
